<div class="container portfolio-container">
  <%= form_with(model: caiss, local: true) do |form| %>
    <% if caiss.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(caiss.errors.count, "error") %> Impossible de sauvegarder:</h2>

        <ul>
        <% caiss.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group col-md-4">
      <%= form.label :nom %>
      <%= form.text_field :nom, class:"form-control" %>
    </div>

    <div class="form-group col-md-4">
      <%= form.label :prenom %>
      <%= form.text_field :prenom, class:"form-control" %>
    </div>

    <div class="form-group col-md-4">
      <%= form.label :acte %>
      <%= form.text_field :acte, class:"form-control" %>
    </div>

    <div class="form-group col-md-4">
      <%= form.label :payement %>
      <%= form.text_field :payement, class:"form-control" %>
    </div>

    <div class="form-group col-md-4">
      <%= form.label :montant %>
      <%= form.number_field :montant, class:"form-control" %>
    </div>

    <div class="form-group col-md-4">
      <%= form.label :telephone %>
      <%= form.text_field :telephone, class:"form-control" %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>