<div class="container portfolio-container">
  <p id="notice"><%= notice %></p>

  <h1>Caisse <span> Aujourd'hui: <%= @total= @caiss_journaliers.sum("montant") %> </span -->
  <br></h1>

  <table>
    <thead>
      <tr>
        <th>Nom</th>
        <th>Prenom</th>
        <th>Acte</th>
        <th>Payement</th>
        <th>Montant</th>
        <th>Telephone</th>
        <th>Created_At</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @caisses.each do |caiss| %>
        <tr>
          <td><%= caiss.nom %></td>
          <td><%= caiss.prenom %></td>
          <td><%= caiss.acte %></td>
          <td><%= caiss.payement %></td>
          <td><%= caiss.montant %></td>
          <td><%= caiss.telephone %></td>
          <td><%= caiss.created_at %></td>
          <td><%= link_to 'Voir', caiss %></td>
          <td><%= link_to 'Modifier', edit_caiss_path(caiss) %></td>
          <td><%= link_to 'Supprimer', caiss, method: :delete, data: { confirm: 'Êtes-vous sûre?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <hr>
  <br>
  <br>
<div class="row">
  <div class="col-md-5">
    <%= form_tag(method: :get) do %>
      <div class="form-group">
        <%#= label :Selectionner_une_date %>
        <%= date_field_tag(:selected_date, params[:selected_date], class:"form-control col-sm-2") %>
        <br>
      <%= submit_tag ("Rechercher"),  class:"form-control col-md-2 btn-primary" %>
      </div>
      <br>
      <%# if defined?(@query) && @query.present?  %>
        <%#= link_to 'Réinitialiser', ouvriers_path %>
      <%# end %>
    <% end %>
  </div>

  <%= link_to 'Nouveau', new_caiss_path %>
</div>