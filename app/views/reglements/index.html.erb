<div class="container portfolio-container">
  <p id="notice"><%= notice %></p>

  <h1>Journal des Reglements</h1>

  <table>
    <thead>
      <tr>
        <th>Mois</th>
        <th>Montant</th>
        <th>Nom Ipm</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @reglements.each do |reglement| %>
        <tr>
          <td><%= reglement.mois %></td>
          <td><%= reglement.montant %></td>
          <td><%= reglement.ipm.name %></td>
          <td><%= link_to 'Voir', reglement %></td>
          <td><%= link_to 'Editer', edit_reglement_path(reglement) %></td>
          <td><%= link_to 'Destroy', reglement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

