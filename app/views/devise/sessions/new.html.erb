<h2 style="margin-left:12rem;margin-top:2rem;">Se Connecter</h2>
<div class="text-center" style="height: 100%;display:flex;align-items: center;
  padding-top: 6rem;
  padding-bottom: 6rem;
  background-color: #f5f5f5;width:50%;margin-top:3rem;margin-left:25%;">
  <main class="form-signin" style="width: 100%;
  max-width: 330px;
  padding: 15px;
  margin: auto;font-weight: 400;z-index: 2;">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group" style="">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control", style:"margin-bottom: -1px;
  border-bottom-right-radius: 0;
  border-bottom-left-radius: 0;" %>
    </div>

    <div class="form-group">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password",class:"form-control",style:"margin-bottom: 10px;
  border-top-left-radius: 0;
  border-top-right-radius: 0;" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.submit "Se Connecter", class:"btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </main>
</div>
