<div class="container portfolio-container">
  <p id="notice"><%= notice %></p>

  <h1>Liste des IPMs</h1>

  <table>
    <thead>
      <tr>
        <th>Nom</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @ipms.each do |ipm| %>
        <tr>
          <td><%= ipm.name %></td>
          <td><%= link_to 'Voir', ipm %></td>
          <td><%= link_to 'Editer', edit_ipm_path(ipm) %></td>
          <td><%= link_to 'Supprimer', ipm, method: :delete, data: { confirm: 'Êtes-vous sûre?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Ajouter IPM', new_ipm_path %>
</div>